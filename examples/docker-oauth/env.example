# Example environment variables for container OAuth authentication
# Copy this to .env and fill in your actual values

# GitHub MCP Server OAuth Tokens
# Get these from: https://github.com/settings/tokens
GITHUB_ACCESS_TOKEN=ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
GITHUB_REFRESH_TOKEN=ghr_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Alternative: Set MCP-specific environment variables directly
# These will be automatically used by the remote OAuth provider
MCP_GITHUB_ACCESS_TOKEN=${GITHUB_ACCESS_TOKEN}
MCP_GITHUB_REFRESH_TOKEN=${GITHUB_REFRESH_TOKEN}
MCP_GITHUB_TOKEN_TYPE=Bearer
MCP_GITHUB_EXPIRES_IN=3600

# Authentication Strategy Override
# Options: auto, device_code, env_vars, manual
MCP_GITHUB_AUTH_STRATEGY=auto

# Device Code Flow Configuration (when using device_code strategy)
MCP_GITHUB_DEVICE_CODE_TIMEOUT=600        # 10 minutes
MCP_GITHUB_DEVICE_CODE_POLLING_INTERVAL=5 # 5 seconds

# Other MCP Servers (example patterns)
# For server "anthropic-claude"
# MCP_ANTHROPIC_CLAUDE_ACCESS_TOKEN=your_token
# MCP_ANTHROPIC_CLAUDE_REFRESH_TOKEN=your_refresh_token
# MCP_ANTHROPIC_CLAUDE_AUTH_STRATEGY=device_code

# For server "api.example.com"  
# MCP_API_EXAMPLE_COM_ACCESS_TOKEN=your_token
# MCP_API_EXAMPLE_COM_REFRESH_TOKEN=your_refresh_token

# Container Detection Override (usually auto-detected)
CONTAINER=true

# Debug OAuth flows
DEBUG=oauth 