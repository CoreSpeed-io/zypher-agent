{
  "workspace": [
    "./packages/core",
    "./packages/tools",
    "./packages/cli"
  ],
  "tasks": {
    "test": "deno task --recursive test",
    "test:watch": "deno task --recursive test:watch",
    "checkall": "deno task --recursive checkall",
    "build:npm": "deno task --recursive build:npm",
    "publish:jsr": "deno task --recursive publish:jsr",
    "clean": "rm -rf dist/ npm/ node_modules/ packages/*/node_modules/"
  },
  "lint": {
    "rules": {
      "tags": ["recommended", "jsr"]
    }
  },
  "nodeModulesDir": "auto",
  "exclude": ["dist/", "node_modules/", "npm/", "packages/*/node_modules/"]
}
