{
  "tasks": {
    "start": "deno run -A bin/cli/cli.ts",
    "start:api": "deno run -A bin/api-server/src/index.ts",
    "dev:api": "deno run --watch -A bin/api-server/src/index.ts",
    "build:cli": "deno compile --allow-all --frozen=true --output dist/cli bin/cli/cli.ts",
    "build:api": "deno compile --allow-all --frozen=true --output dist/api-server bin/api-server/src/index.ts",
    "bundle:api": "rolldown -c rolldown.config.mts",
    "test": "deno test -A --trace-leaks",
    "test:watch": "deno test -A --watch",
    "checkall": "deno fmt && deno lint && deno check .",
    "fmt": "deno fmt",
    "lint": "deno lint",
    "clean": "rm -rf dist/"
  },
  "compilerOptions": {
    "verbatimModuleSyntax": true
  },
  "imports": {
    "@zypher/": "./src/",
    "@aws-sdk/client-s3": "npm:@aws-sdk/client-s3@^3.828.0",
    "@aws-sdk/s3-request-presigner": "npm:@aws-sdk/s3-request-presigner@^3.828.0",
    "@panva/openid-client": "jsr:@panva/openid-client@^6.5.0",
    "@deno/rolldown-plugin": "jsr:@deno/rolldown-plugin@^0.0.7",
    "@std/assert": "jsr:@std/assert@^1.0.13",
    "@std/crypto": "jsr:@std/crypto@^1.0.5",
    "@std/dotenv": "jsr:@std/dotenv@^0.225.5",
    "@std/cli": "jsr:@std/cli@^1.0.20",
    "@std/encoding": "jsr:@std/encoding@^1.0.10",
    "@std/expect": "jsr:@std/expect@^1.0.16",
    "@std/async": "jsr:@std/async@^1.0.13",
    "@std/fs": "jsr:@std/fs@^1.0.18",
    "@std/path": "jsr:@std/path@^1.1.0",
    "@std/testing": "jsr:@std/testing@^1.0.14",
    "@std/uuid": "jsr:@std/uuid@^1.0.9",
    "hono": "npm:hono@^4.7.11",
    "@hono/zod-validator": "npm:@hono/zod-validator@^0.7.0",
    "@openai/openai": "jsr:@openai/openai@^4.102.0",
    "@anthropic-ai/sdk": "npm:@anthropic-ai/sdk@^0.54.0",
    "@modelcontextprotocol/sdk": "npm:@modelcontextprotocol/sdk@^1.15.0",
    "chalk": "npm:chalk@^5.4.1",
    "rolldown": "npm:rolldown@^1.0.0-beta.15",
    "rxjs": "npm:rxjs@^7.8.2",
    "rxjs-for-await": "npm:rxjs-for-await@^1.0.0",
    "zod": "npm:zod@^3.25.64",
    "zod-to-json-schema": "npm:zod-to-json-schema@^3.24.5"
  },
  "nodeModulesDir": "auto",
  "exclude": ["dist/", "node_modules/"]
}
